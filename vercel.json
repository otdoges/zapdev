{
  "version": 2,
  "installCommand": "bun install",
  "buildCommand": "bun run build",
  "outputDirectory": "dist",

  "headers": [
    {
      "source": "/api/stripe-webhook",
      "headers": [
        { "key": "x-vercel-disable-binary", "value": "true" }
      ]
    }
  ],
  "functions": {
    "api/**/*.ts": { "runtime": "nodejs20.x", "memory": 256, "maxDuration": 10 },
    "api/**/*.js": { "runtime": "nodejs20.x", "memory": 256, "maxDuration": 10 }
  },

  "rewrites": [
    { "source": "/api/webhooks/(.*)", "destination": "/api/webhooks/$1" },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}