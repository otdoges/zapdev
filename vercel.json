{
  "version": 2,
  "builds": [
    { "src": "api/*.ts", "use": "@vercel/node@5.3.11", "config": { "runtime": "nodejs20.x", "memory": 256, "maxDuration": 10 } },
    { "src": "api/*.js", "use": "@vercel/node@5.3.11", "config": { "runtime": "nodejs20.x", "memory": 256, "maxDuration": 10 } },
    { "src": "api/**/*.ts", "use": "@vercel/node@5.3.11", "config": { "runtime": "nodejs20.x", "memory": 256, "maxDuration": 10 } },
    { "src": "api/**/*.js", "use": "@vercel/node@5.3.11", "config": { "runtime": "nodejs20.x", "memory": 256, "maxDuration": 10 } },
    { "src": "package.json", "use": "@vercel/static-build@2.7.17", "config": { "distDir": "dist", "buildCommand": "npm run build", "installCommand": "bun install", "devCommand": "npm run dev:complete" } }
  ],

  "headers": [
    {
      "source": "/assets/(.*).js",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript; charset=utf-8"
        }
      ]
    },
    {
      "source": "/assets/(.*).mjs",
      "headers": [
        {
          "key": "Content-Type", 
          "value": "application/javascript; charset=utf-8"
        }
      ]
    },
    {
      "source": "/(.*).js",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript; charset=utf-8"
        }
      ]
    },
    {
      "source": "/(.*).mjs",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript; charset=utf-8"
        }
      ]
    }
  ],
  
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/:path*" },
    { "source": "/hono/trpc/:path*", "destination": "/api/hono-trpc/trpc/:path*" },
    { "source": "/hono/checkout", "destination": "/api/hono-polar/checkout" },
    { "source": "/hono/checkout-polar", "destination": "/api/hono-polar/checkout-polar" },
    { "source": "/hono/portal", "destination": "/api/hono-polar/portal" },
    { "source": "/hono/subscription", "destination": "/api/hono-polar/subscription" },
    { "source": "/hono/webhooks", "destination": "/api/hono-polar/webhooks" },
    { "source": "/hono/:path*", "destination": "/api/hono-polar/:path*" },
    { "source": "/:path*", "destination": "/index.html" }
  ]
}