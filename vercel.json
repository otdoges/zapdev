{
  "version": 2,
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node@5.3.11", "config": { "runtime": "nodejs20.x", "memory": 256, "maxDuration": 10 } },
    { "src": "api/**/*.js", "use": "@vercel/node@5.3.11", "config": { "runtime": "nodejs20.x", "memory": 256, "maxDuration": 10 } },
    { "src": "package.json", "use": "@vercel/static-build@2.7.17", "config": { "distDir": "dist", "buildCommand": "bun run build", "installCommand": "bun install" } }
  ],

  "headers": [
    {
      "source": "/api/stripe-webhook",
      "headers": [
        { "key": "x-vercel-disable-binary", "value": "true" }
      ]
    }
  ],
  
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}