# REQUIRED - Sandboxes for code execution
# Get yours at https://e2b.dev
E2B_API_KEY=your_e2b_api_key_here

# REQUIRED - Web scraping for cloning websites
# Get yours at https://firecrawl.dev
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# OPTIONAL - AI Providers (need at least one)
# Get yours at https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Get yours at https://platform.openai.com
OPENAI_API_KEY=your_openai_api_key_here

# Get yours at https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Get yours at https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# PAYMENT PROCESSING - Stripe Integration
# Get yours at https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe Webhook Secret (get from Stripe Dashboard > Webhooks)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# AUTUMN BILLING - Autumn Integration (Stripe wrapper)
# Get yours at https://useautumn.com/dashboard
AUTUMN_SECRET_KEY=am_sk_your_autumn_secret_key_here

# App URL for Stripe redirects
NEXT_PUBLIC_APP_URL=http://localhost:3000

# AUTHENTICATION - Clerk
# Get yours at https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# Optional: Clerk webhook signing secret (for handling webhooks)
CLERK_WEBHOOK_SECRET=whsec_your_clerk_webhook_secret_here

# Optional: JWT signing key for custom auth flows
CLERK_JWT_KEY=your_jwt_signing_key_here

# Required for Convex JWT authentication - Your Clerk Frontend API URL
CLERK_JWT_ISSUER_DOMAIN=https://your_clerk_subdomain.clerk.accounts.dev

# ANALYTICS - PostHog (Optional)
# Get yours at https://app.posthog.com
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# DATABASE - Convex (Required for chat history and auth)
# Get yours at https://dashboard.convex.dev
NEXT_PUBLIC_CONVEX_URL=https://your_convex_url.convex.cloud

# CACHING - Redis/Upstash (Optional but recommended for performance)
# Get yours at https://console.upstash.com
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token_here

# MONITORING - Sentry (Optional for error tracking)
# Get yours at https://sentry.io
SENTRY_DSN=https://your_sentry_dsn_here

# SEARCH - Brave API (Optional for web search functionality)
# Get yours at https://api.search.brave.com
BRAVE_API_KEY=your_brave_api_key_here

# DEPLOYMENT - Vercel API (Optional for deployment functionality)
# Get yours at https://vercel.com/account/tokens
VERCEL_API_TOKEN=your_vercel_api_token_here

# ANALYTICS - Salt for IP hashing (for privacy-compliant analytics)
ANALYTICS_SALT=your-random-salt-for-analytics-ip-hashing

# SECURITY - API Key Encryption (Required for production)
# Use a strong random key - change this in production!
API_KEY_ENCRYPTION_SECRET=your-strong-encryption-key-here

# ADMIN CONFIGURATION
# Comma-separated list of user IDs with admin privileges
NEXT_PUBLIC_ADMIN_USER_IDS=user_id1,user_id2
ADMIN_USER_IDS=user_id1,user_id2

# Developer access (for development features)
NEXT_PUBLIC_DEVELOPER_USER_IDS=user_id1,user_id2

# OPTIONAL CONFIGURATION

# Custom API base URLs (if using proxies or custom endpoints)
ANTHROPIC_BASE_URL=https://api.anthropic.com/v1
OPENAI_BASE_URL=https://api.openai.com/v1

# Logging configuration
LOG_LEVEL=1
LOG_TO_FILE=false
LOG_TO_DATABASE=false


# Cache configuration
CACHE_WARMUP_ENABLED=true

# Public origin for webhooks and redirects
PUBLIC_ORIGIN=http://localhost:3000